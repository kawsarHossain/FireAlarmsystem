<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.hunululu.com.layouttest.MainActivity">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:text="Login"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="231dp" />

    <TextView
        android:id="@+id/lblUname"
        android:layout_width="77dp"
        android:layout_height="21dp"
        android:text="User Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="77dp"
        android:layout_height="21dp"
        android:text="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="139dp" />

    <EditText
        android:id="@+id/lblPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="131dp"
        tools:layout_editor_absoluteX="106dp" />

    <RadioButton
        android:id="@+id/rbtnVolentier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volentier"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="390dp" />

    <RadioButton
        android:id="@+id/rbtnAdmin"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:text="Admin"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="349dp" />

    <RadioButton
        android:id="@+id/rbtnUser"
        android:layout_width="89dp"
        android:layout_height="27dp"
        android:text="User"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="431dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="161dp"
        android:layout_height="32dp"
        android:background="@android:color/holo_blue_light"
        android:text="Select Your Role As"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="304dp" />

</android.support.constraint.ConstraintLayout>
