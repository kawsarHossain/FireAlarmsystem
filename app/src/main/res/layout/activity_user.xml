<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_backgroun2"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="test.hunululu.com.layouttest.UserActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20" />

    <Button
        android:id="@+id/btnSetAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:onClick="setAlarm"
        android:text="Sent MMS Alart"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="58dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:onClick="sendSMS"
        android:text="Semt SMS alart"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="58dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17" />

    <Button
        android:id="@+id/btnInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:onClick="startInstructionActivityFromUser"
        android:text="Instruction" />
</LinearLayout>
